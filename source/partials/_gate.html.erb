    <input type="submit" class="btn btn-success" id="age-gate-submit">
  </form>
  <!-- CODE WORD GATE -->
  <form id="code-gate" class="form-horizontal hider" onsubmit="return validateCode()" method="post">
    <img src="https://s3.amazonaws.com/myfangate.com/1d1row/codeword.jpg">
    <input type="text" class="age form-control" name="code" id="code"/><br>
    <input type="submit" class="btn btn-success" id="age-gate-submit">
  </form>
